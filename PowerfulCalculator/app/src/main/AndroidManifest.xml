<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wuchangi.powerfulcalculator">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/calculator"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".base.BaseActivity">
        </activity>
        <activity android:name=".activities.RadixConversionActivity">
        </activity>
        <activity android:name=".activities.BigDecimalActivity">
        </activity>
        <activity android:name=".activities.CapitalDecimalActivity">
        </activity>
        <activity android:name=".activities.BigDecimalResultActivity">
        </activity>
        <activity android:name=".activities.HelpActivity">
        </activity>
        <activity android:name=".activities.AboutActivity">
        </activity>
        <activity android:name=".activities.GodModeActivity">
        </activity>
    </application>

</manifest>